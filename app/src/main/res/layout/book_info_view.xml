<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/book_author_view"
        tools:text="Author: Jerome K. Jerome"
        style="@style/GeneralBookInfoStyle" />

    <TextView
        android:id="@+id/book_narrator_view"
        tools:text="Narrator: Julia R."
        style="@style/GeneralBookInfoStyle"  />

    <TextView
        android:id="@+id/duration_view"
        tools:text="Duration: 12:04:38"
        style="@style/GeneralBookInfoStyle"  />

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/secondary_padding"
        android:paddingTop="@dimen/base_padding"
        android:text="@string/summary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/book_description"
        tools:text="@string/stub_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingEnd="@dimen/base_padding"
        android:textSize="16sp" />
</LinearLayout>